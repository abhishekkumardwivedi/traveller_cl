<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/viewBg"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context=".PlaceDetails.dump.PlaceDetailsActivity"
                tools:showIn="@layout/activity_place_detail">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="10dp"
                  android:layout_marginRight="6dp"
                  android:layout_marginLeft="6dp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingBottom="10dp"
                      android:paddingTop="10dp"
                      android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/comment_title"
                    android:layout_weight="1"
                    android:text="Comment"
                    android:textSize="@dimen/detailed_title_size"
                    android:textStyle="normal"
                    android:padding="@dimen/detailed_title_padding"
                    android:textColor="#000"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/myplan_title"
                    android:layout_weight="1"
                    android:text="MyPlan"
                    android:textSize="@dimen/detailed_title_size"
                    android:textStyle="normal"
                    android:padding="@dimen/detailed_title_padding"
                    android:textColor="#000"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/share_title"
                    android:layout_weight="1"
                    android:text="Share"
                    android:textSize="@dimen/detailed_title_size"
                    android:textStyle="normal"
                    android:padding="@dimen/detailed_title_padding"
                    android:textColor="#000"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/like_title"
                    android:layout_weight="1"
                    android:text="Like"
                    android:textSize="@dimen/detailed_title_size"
                    android:textStyle="normal"
                    android:padding="@dimen/detailed_title_padding"
                    android:textColor="#000"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/details_title"
                    android:layout_weight="1"
                    android:text="Details"
                    android:textSize="@dimen/detailed_title_size"
                    android:textStyle="normal"
                    android:padding="@dimen/detailed_title_padding"
                    android:textColor="#000"/>

        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:id="@+id/sepH"
                android:layout_below="@id/detail"
                android:paddingTop="6dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="1dp"
                android:background="#d3d3d3"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:elevation="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>