<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/viewBg"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context=".PlaceDetails.dump.PlaceDetailsActivity"
                tools:showIn="@layout/activity_place_detail">

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/info_title"
                android:text="My Plan"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_span="3"
                android:padding="10dip"
                android:textColor="#000"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:clickable="true"
                          android:layout_margin="10dp"
                          android:id="@+id/date_title"
                          android:textStyle="bold"
                          android:text="Date"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:clickable="true"
                          android:layout_toRightOf="@id/date_title"
                          android:layout_margin="10dp"
                          android:id="@+id/date_content"
                          android:text="---"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/date_title"
                          android:clickable="true"
                          android:id="@+id/friends_title"
                          android:layout_margin="10dp"
                          android:textStyle="bold"
                          android:text="Friends"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:clickable="true"
                          android:layout_below="@id/date_content"
                          android:layout_toRightOf="@id/friends_title"
                          android:layout_margin="10dp"
                          android:id="@+id/friends_content"
                          android:text="---"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>