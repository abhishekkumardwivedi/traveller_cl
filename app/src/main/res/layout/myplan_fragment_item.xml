<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:elevation="3dp"
        android:layout_marginTop="10dp">
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="3dp"
                    android:clickable="true"
                    android:src="@drawable/landscape"
                    android:scaleType="fitXY"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/name"
                        android:text=""
                        android:layout_width="match_parent"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:paddingLeft="@dimen/album_title_padding"
                        android:paddingRight="@dimen/album_title_padding"
                        android:paddingTop="@dimen/album_title_padding"
                        android:paddingBottom="@dimen/common_padding"
                        android:textColor="@color/album_title"
                        android:textSize="18dp"/>
                <ImageView
                        android:id="@+id/calendar_launch"
                        android:layout_below="@id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="@dimen/album_title_padding"
                        android:clickable="true"
                        android:src="@drawable/calendar"
                        android:scaleType="fitXY"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date"
                        android:layout_toRightOf="@+id/calendar_launch"
                        android:layout_below="@id/name"
                        android:padding="@dimen/album_title_padding"/>

                <ImageView
                        android:id="@+id/map_launch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="@dimen/album_title_padding"
                        android:clickable="true"
                        android:src="@drawable/map"
                        android:scaleType="fitXY"
                        android:layout_below="@+id/calendar_launch"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/locations"
                        android:layout_toRightOf="@+id/map_launch"
                        android:layout_below="@id/date"
                        android:padding="@dimen/album_title_padding"/>

            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/user_launch"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="@dimen/album_title_padding"
                    android:clickable="true"
                    android:src="@drawable/group"
                    android:scaleType="fitXY"/>
            <LinearLayout
                    android:id="@+id/linear_layout_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/user_launch"
                    android:padding="10dp"
                    android:orientation="horizontal">
                <include layout="@layout/recyclerview_friends_list"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>